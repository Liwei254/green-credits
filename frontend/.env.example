# =========================
# Contract Addresses (Moonbase Alpha)
# =========================
# Replace with your deployed addresses from deployment logs
# For localhost: Run `npx hardhat run scripts/deploy.js --network localhost`
# For Moonbase Alpha: Run `npx hardhat run scripts/deploy-moonbeam.ts --network moonbasealpha`

# Core contracts (required)
VITE_TOKEN_ADDRESS=0xYourGreenCreditTokenAddress
VITE_VERIFIER_ADDRESS=0xYourEcoActionVerifierAddress
VITE_GCT_ADDRESS=0xYourGreenCreditTokenAddress

# Optional donation pool; if unset, Donate UI is hidden and nav link removed
VITE_DONATION_POOL_ADDRESS=0xYourDonationPoolAddress

# Phase 1 registry addresses (if deployed)
VITE_METHODOLOGY_REGISTRY_ADDRESS=0xYourMethodologyRegistryAddress
VITE_BASELINE_REGISTRY_ADDRESS=0xYourBaselineRegistryAddress

# Phase 2: Retirement registry address (if deployed)
VITE_RETIREMENT_REGISTRY_ADDRESS=0xYourRetirementRegistryAddress

# Phase 3: Verifier reputation and matching pool addresses (if deployed)
VITE_VERIFIER_BADGE_SBT_ADDRESS=0xYourVerifierBadgeSBTAddress
VITE_MATCHING_POOL_ADDRESS=0xYourMatchingPoolAddress
VITE_TIMELOCK_CONTROLLER_ADDRESS=0xYourTimelockControllerAddress

# Mock contracts for testing (optional)
VITE_MOCK_USDC_ADDRESS=0xYourMockUSDCAddress

# =========================
# Feature Flags
# =========================

# The EcoActionVerifier in this repo expects (description, proofCid)
VITE_VERIFIER_HAS_PROOF=true

# Enable V2 features (trustable accounting primitives)
# Set to true to use submitActionV2 with extended fields
VITE_VERIFIER_V2=true

# =========================
# Upload Configuration
# =========================

# IPFS upload (recommended: proxy server using w3up/UCAN)
VITE_UPLOAD_PROXY_URL=http://localhost:8787/upload

# Legacy direct token method (not recommended, classic API deprecated)
# VITE_WEB3_STORAGE_TOKEN=your_classic_token_here

# =========================
# Network Configuration
# =========================

# Chain ID (1287 for Moonbase Alpha, 31337 for localhost)
VITE_CHAIN_ID=1287

# Network RPC URL (optional, defaults to Moonbase Alpha)
# VITE_RPC_URL=https://rpc.api.moonbase.moonbeam.network
